{
  "compilerOptions": {
    "module": "nodenext",
    "sourceMap": true,
    "target": "ES2018",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force"
  }
}
